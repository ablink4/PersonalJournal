<Application x:Class="PortableJournal.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:PortableJournal" 
             xmlns:vm="clr-namespace:PortableJournal.ViewModel"
             xmlns:view="clr-namespace:PortableJournal.View"
             StartupUri="View/MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:ViewModelNewScreen}">
            <view:NewScreenControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ViewModelJournal}">
            <view:JournalControl/>
        </DataTemplate>
    </Application.Resources>
</Application>